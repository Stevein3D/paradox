<div class="row">
  <div class="col-sm-offset-1 col-sm-10 text-center">
    <div class="date-tab" >
      <h2 >Today In Time: <%=@today.strftime("%B #{@today.day.ordinalize}, %Y")%></h2>
    </div>
  </div>  
</div>

<!-- ///////////////////// TODAY IN TIME SECTION ///////////////////// -->

<div class="section">
  <% unless @tits.nil? %>
    <div id="eventCarousel" class="carousel slide" data-ride="carousel" data-interval="6000" data-pause="hover">
      <div class="carousel-inner" role="listbox">
        <% @tits.shuffle.each_with_index do |tit, index| %>
          <div class="item <% if index == 0 %> active <% end %>">
            <%= render partial: "tit", object: tit %>
          </div>
        <% end %>
      </div>
    <!-- Left and right controls -->
      <a class="left carousel-control" href="#eventCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#eventCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  <% end %>
</div>

<!--- //////////////// MY VIDEOS SECTION ///////////////////// -->

<div class="section">
  <div class="row">
    <div class="col-sm-offset-2 col-sm-5 center">
      <div class="videoWrapper">
        <iframe src="http://player.vimeo.com/video/<%= @montages.first["id"] %>"
              style="border: 4px solid #b8b8c7; margin-top: 10px;" 
              webkitallowfullscreen="" mozallowfullscreen="" allowfullscreen="">
        </iframe>
      </div>
    </div>
    <div class="col-sm-3">
      <% @montages.each do |video| %>
        <%= image_tag video["thumbnail_large"], class: "video-thumb", id: video["id"] %>
      <% end %>
    </div>
  </div>
  
</div>

<!-- /////////////////////  TAGLINE SECTION /////////////////////////-->
<div class="row">
  <div class="col-sm-offset-1 col-sm-10 text-center">
    <div class="date-tab" >
      <h2 >Tagline Trivia!</h2>
    </div>
  </div>  
</div>

<div class="section">
  <div class="row text-center">
    <h3>Which title below delivers this tagline?</h3>
    <h4>Your score: <span id="score">0</span></h4>
    <br>
  </div>
  <div id="taglineCarousel" class="carousel slide" data-ride="carousel" data-interval="0">
    <div class="carousel-inner" role="listbox">
      <% @taglines.shuffle.each_with_index do |tagline, index| %>
        <div class="item <% if index == 0 %> active <% end %>">
          <div class="row text-center">
              <h4><%= tagline.tagline %></h4>
          </div>

          <div class="row">
            <div class="text-center">
              <!--<div class="click-me btn btn-default">Click to reveal the source!</div>
              
               <% if Title.find_by(title_index: tagline.title_index).nil? %>
                <div class="tagline-source">
                  <h5>- <%= tagline.title %></h5>
                </div>
              <% else %>
                <div class="tagline-source">
                  <h5>- <%= link_to tagline.title, title_path(Title.find_by(title_index: tagline.title_index))%></h5>
                </div>
              <% end %> -->
              
              <div class="multiple-choice-box">
              
                <% randomTaglines = Tagline.limit(120).order("RANDOM()").pluck(:title).to_a %>
                <% multipleChoice = randomTaglines.sample(2).to_a %>
                <% multipleChoice.push(tagline.title).shuffle.each do |choice| %>
                  <div class="row">
                    <% if choice == tagline.title %>
                      <div class="col-xs-1">
                        <div class="circle correct"></div>
                      </div>
                      <div class="col-xs-8">
                        <h4 class=" guess" style="display:inline"><%= choice %></h4>  
                      </div>
                      <div class="col-xs-3">
                        <h4 class="correct-text" style="display:inline">CORRECT</h4><br>  
                      </div>
                    <% else %>
                      <div class="col-xs-1">
                        <div class="circle incorrect"></div>
                      </div>
                      <div class="col-xs-8">
                        <h4 class=" guess " style="display:inline"><%= choice %></h4>  
                      </div>
                      <div class="col-xs-3">
                        <h4 class="incorrect-text" style="display:inline">BUMMER</h4><br>  
                      </div>
                    <% end %>
                  </div>
                <% end %>
              
                
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    


    <!-- //////// Left and right controls ////////////-->
    
    <a class="left carousel-control" href="#taglineCarousel" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#taglineCarousel" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>  
</div>