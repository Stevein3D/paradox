<%= flash[:notice] %>
<div class="container-fluid">
<%= form_tag(events_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Events" %>
<%= submit_tag "Search" %>
<% end %>
</div>

<%= will_paginate %>

<% @events.each do |event| %>
<div class="container-fluid dox-entry">
  <div class="row">
    <div class="col-xs-3">
    <% if event.people_index.nil? %>
      <%= cl_image_tag("Titles/" + event.title_index.to_s + ".png", :class=>"profile-photo") %>
    <% else %>
      <%= cl_image_tag("People/" + event.people_index.to_s + ".png", :class=>"profile-photo") %>
    <% end %>
    </div>
    <div class="col-xs-9">
      <div class="row">
      	<div class="col-xs-2"><h5> Full Index: </h5></div>
    	<div class="col-xs-10"><h4> <%= event.event_index %> </h4></div>  	
      </div>
      <div class="row">
      	<div class="col-xs-2"><h5> Event Year: </h5></div>
    	<div class="col-xs-10"><p> <%= event.event_year %> </p></div>
      </div>
      <div class="row">
      	<div class="col-xs-2"><h5> Event </h5></div>
    	<div class="col-xs-10"><p> <%= event.event %> </p></div>
      </div>
      <div class="row">
        <div class="col-xs-2"><h5> Blurb </h5></div>
    	<div class="col-xs-10"><p> <%= event.event_message %> </p></div>
  	  </div>
    </div>
  </div>
</div>
<% end %>

<%= will_paginate %>