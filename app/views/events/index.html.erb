<%= flash[:notice] %>
<div class="container-fluid">
<%= form_tag(events_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Events" %>
<%= submit_tag "Search" %>
<% end %>
</div>

<%= will_paginate %>

<% @events.each do |event| %>
<div class="container-fluid dox-entry">
  <div class="row">
    <div class="col-xs-3">
      <%= cl_image_tag("People/" + event.people_index.to_s + ".png", :class => "profile-photo", :default_image => "People:40000.png") %>
    </div>
    <div class="col-xs-6">
      <div class="row">
        <div class="col-xs-2"><h5> Event Date: </h5></div>
    	  <div class="col-xs-10"><p> <%= event.event_date %> </p></div>
      </div>
      <div class="row">
      	<div class="col-xs-2"><h5> Event: </h5></div>
    	  <div class="col-xs-10"><p> <%= event.event %> </p></div>
      </div>
      <div class="row">
        <div class="col-xs-2"><h5> Event Message: </h5></div>
    	  <div class="col-xs-10"><p> <%= event.event_message %> </p></div>
  	  </div>
      <div class="row">
        <div class="col-xs-4"><h5> Event Index: <%= event.event_index %></h5></div>
        <div class="col-xs-4"><h5> People Index: <%= event.people_index %></h5></div>
        <div class="col-xs-4"><h5> Title Index: <%= event.title_index %></h5></div>
      </div>
    </div>
    <div class="col-xs-3">
      <%= cl_image_tag("Titles/" + event.title_index.to_s + ".png", :class =>"profile-photo", :default_image => "People:40000.png") %>
    </div>
  </div>
</div>
<% end %>

<%= will_paginate %>