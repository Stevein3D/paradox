<div class="container-fluid">
<%= form_tag(titles_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Titles" %>
<%= submit_tag "Search" %>
<% end %>
</div>

<%= will_paginate %>

<% @titles.each do |title| %>
<div class="container-fluid dox-entry">
  <div class="row">
    <div class="col-xs-3">
    <%= cl_image_tag("Titles/" + title.title_index.to_s + ".png", :class=>"profile-photo img-responsive") %>
    </div>
    <div class="col-xs-9">
      <div class="row">
    	  <div class="col-xs-12"><h4> <%= title.title %></h4>
          <br>
        </div>  	
      </div>
      <% if !title.season_num.nil? %>
        <div class="row">
          <div class="col-xs-6"><p><strong>Season:</strong>  <%=title.season_num%> <strong>Episode:</strong>  <%= title.episode_num%></p></div>
          <div class="col-xs-6"><p><strong>Episode:</strong> <%=title.episode%> </p></div>
        </div>
      <% end %>
      <div class="row">
    	  <div class="col-xs-6"><p> <strong>Release Date:</strong> <%= title.release_date %> </p></div>
        <div class="col-xs-6"><p> <strong>Country of Release:</strong> <%= title.country %> </p></div>
      </div>
      <div class="row">
      	<div class="col-xs-6"><p> <strong>Length:</strong> <%= title.length %> minutes</p></div>
        <div class="col-xs-6"><p> <strong>MPAA:</strong> <%= title.mpaa %> </p></div>
      </div>
      <div class="row">
        <div class="col-xs-6"><p> <strong>Medium:</strong> <%= title.sub_medium %> </p></div>
        <div class="col-xs-6"><p> <strong>Genre:</strong> <%= title.genre %> </p></div>
      </div>
      <div class="row">
        <div class="col-xs-12"><p> <strong>Description:</strong> <%= title.description %> </p></div>
      </div>
      <% if !current_user.nil? && current_user.admin? %>
        <div class="col-xs-12"><p> <strong>Production Medium:</strong> <%= title.medium %>   |    <strong>Title Index:</strong> <%= title.title_index%>    |    <strong>Title Sort:</strong> <%= title.title_sort%>    |  <strong><%= link_to "DELETE", title, method: :delete, data: { confirm: "Are you sure you want to delete this title?" } %></strong></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
<% end %>

<%= will_paginate %>

<h2> <%= @titles.count %> total entries. </h2>