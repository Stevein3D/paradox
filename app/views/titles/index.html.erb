<%= form_tag(titles_path, :method => "get", :class => "inline", :style => "margin-bottom: 15px;", id: "search-form") do %>
  <div class="input-group">
    <div class="input-group-addon">
      <% if @titles.count == 1 %>
	    <strong><%= @titles.count %></strong> total entry.
	  <% else %>
		<strong><%= @titles.count %></strong> total entries.
	  <% end %>
    </div>
    <%= text_field_tag :search, params[:search],:class => "form-control", placeholder: "Search Titles", autofocus: "autofocus" %>
    <div class="input-group-btn">
	  <%= submit_tag "Search", class: "btn btn-primary" %>	
	</div>
  </div>
<% end %>

<%= will_paginate %>

<% @titles.order("title_sort ASC, season_num ASC, episode_num ASC").each do |title| %>
  <%= render partial: "title", object: title %>
<% end %>

<%= will_paginate %>

