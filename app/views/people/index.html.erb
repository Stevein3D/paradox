<%= form_tag(people_path, :method => "get", id: "search-form") do %>
  <div class="row">
    <div class="col-xs-10">
      <%= text_field_tag :search, params[:search],  placeholder: "Search Paradoxes", autofocus: "autofocus" %>    
    </div>
    <div class="col-xs-2">
      <%= submit_tag "Search" %>
    </div>
  </div>
<% end %>


<h2> <%= @people.count %> total entries. </h2>

<%= will_paginate %>

<% @people.order("last_name ASC, first_name ASC").each do |person| %>
  <%= render partial: "person", object: person %>
<% end %>

<%= will_paginate %>

