<%= form_tag(people_path, :method => "get", :class => "inline", :style => "margin-bottom: 15px;", id: "search-form") do %>
  <div class="input-group">
    <div class="input-group-addon">
      <% if @people.count == 1 %>
	    <strong><%= @people.count %></strong> total entry.
	  <% else %>
		<strong><%= @people.count %></strong> total entries.
	  <% end %>
    </div>
    <%= text_field_tag :search, params[:search],:class => "form-control", placeholder: "Search People", autofocus: "autofocus" %>
    <div class="input-group-btn">
	  <%= submit_tag "Search", class: "btn btn-primary" %>	
	</div>
  </div>
<% end %>





<%= will_paginate %>

<% @people.order("last_name ASC, first_name ASC").each do |person| %>
  <%= render partial: "person", object: person %>
<% end %>

<%= will_paginate %>

