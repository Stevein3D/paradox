<div class="container-fluid show-container">
  <div class="row">
    <div class="col-xs-3">
    <%= cl_image_tag("People/" + person.people_index.to_s + ".png", :class=>"profile-photo img-responsive", :alt => person.full_name) %>
    </div>
    <div class="col-xs-9 xxx">
      <h2> <%= person.full_name %></h2>
      <div class="row">
        <div class="col-xs-2">
        </div>
        <div class="col-xs-10">
        </div>
      </div>
      <h4 style="display: inline-block">Birth Date:</h4> &nbsp <p style="display: inline-block"><%= person.birth_date %></p>
      <br>
      <% if person.death_date.nil? %>
        <h4 style="display: inline-block">Death Date:</h4> &nbsp <p style="display: inline-block">Still traveling</p>
      <% else %>
        <h4 style="display: inline-block">Death Date:</h4> &nbsp <p style="display: inline-block"><%= person.death_date %></p>
      <% end %>
      <br>
      <h4 style="display: inline-block">Craft:</h4> &nbsp <p style="display: inline-block"><%= person.craft %></p>
      <br>
      <h4 style="display: inline-block">Profession:</h4> &nbsp <p style="display: inline-block"><%= person.profession %></p>
      <br>
      <h4 style="display: inline-block">Nationality:</h4> &nbsp <p style="display: inline-block"><%= person.nationality %></p>
      <br>
      <h4 style="display: inline-block">Biography:</h4> &nbsp <p style="display: inline-block"><%= person.biography %></p>
      <br>
      <h4 style="display: inline-block">Travels:</h4> &nbsp <p style="display: inline-block"><%= person.travels %></p>
      <br>

      <div class="row">
        <div class="col-xs-12">
        <% if person.has_audio? %>
          <% audioIndex = person.people_index %>
          <%= audio_tag "http://res.cloudinary.com/paradoxparkway/video/upload/ac_mp3/v1448471034/Audio/#{audioIndex}.mp3", class: "audio-play" %>
          <p class="btn btn-default audioButton">Click to hear <%= person.first_name%>'s greeting</p>
        <% end %>
          <br>
        </div>    
      </div>
      
      
      <% if !current_user.nil? && current_user.admin? %>
        <div class="col-xs-12 admin-box">
          <p> <strong>Person Index:</strong> <%= person.people_index%>
          <br>
          <strong>Title Index:</strong> <%= person.title_index%>
          <br>
          <strong><%= link_to "DELETE", person, method: :delete, data: { confirm: "Are you sure you want to delete this title?" } %></strong>    |  <strong><%= link_to "EDIT", edit_person_path(person.id) %></strong></p>
        </div>
      <% end %>
    </div>
  </div>
</div>