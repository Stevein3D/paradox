<div class="container-fluid dox-entry">
  <div class="row">
    <div class="col-xs-3">
    <%= cl_image_tag("People/" + person.people_index.to_s + ".png", :class=>"profile-photo img-responsive", :alt => person.full_name) %>
    </div>
    <div class="col-xs-9">
      <div class="row">
        <div class="col-xs-12"><h4> <%= person.full_name %></h4>
        <% if person.has_audio? %>
          <% audioIndex = person.people_index %>
          <%= audio_tag "http://res.cloudinary.com/paradoxparkway/video/upload/ac_mp3/v1448471034/Audio/#{audioIndex}.mp3", class: "audio-play" %>
          <p class="btn btn-default audioButton">Click to hear <%= person.first_name%>'s greeting</p>
        <% end %>
          <br>
        </div>    
      </div>
      <div class="row">
        <div class="col-xs-6"><p> <strong>Birth Date:</strong> <%= person.birth_date %> </p></div>
        <% if person.death_date.nil? %>
          <div class="col-xs-6"><p> <strong>Death Date:</strong> Still traveling </p></div>
        <% else %>
          <div class="col-xs-6"><p> <strong>Death Date:</strong> <%= person.death_date %> </p></div>
        <% end %>
      </div>
      <div class="row">
        <div class="col-xs-6"><p> <strong>Craft:</strong> <%= person.craft %> </p></div>
        <div class="col-xs-6"><p> <strong>Profession:</strong> <%= person.profession %> </p></div>
      </div>
      <div class="row">
        <div class="col-xs-12"><p> <strong>Nationality:</strong> <%= person.nationality %> </p></div>
      </div>
      <div class="row">
        <div class="col-xs-12"><p> <strong>Biography:</strong> <%= person.biography %> </p></div>
      </div>
      <div class="row">
        <div class="col-xs-12"><p> <strong>Travels:</strong> <%= person.travels %> </p></div>
      </div>
      
      <% if !current_user.nil? && current_user.admin? %>
        <div class="col-xs-12 admin-box">
          <p> <strong>Person Index:</strong> <%= person.people_index%>
          <br>
          <strong>Title Index:</strong> <%= person.title_index%>
          <br>
          <strong><%= link_to "DELETE", person, method: :delete, data: { confirm: "Are you sure you want to delete this title?" } %></strong>    |  <strong><%= link_to "EDIT", edit_person_path(person.id) %></strong></p>
        </div>
      <% end %>
    </div>
  </div>
</div>