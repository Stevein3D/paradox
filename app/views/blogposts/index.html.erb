<div class="container">
  <% @blogposts.each do |blogpost| %>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="row">
    	  <h2 class="text-justify"><%= blogpost.title %></h2>
    	  <div class="row">
      		<div class="text-center" style="border-top: solid black 2px; border-bottom: solid black 2px; margin-bottom: 10px">
        	  <div class="h5"><%= blogpost.category %> &nbsp | &nbsp <%= blogpost.subcategory %> &nbsp | &nbsp <%= blogpost.date %></div>
      		</div> 
    	  </div>
    	  <div class="row">
      		<div class="col-md-12 text-center blog-pic">
        	  <%= cl_image_tag("Blog/" + blogpost.picture + ".png")%>
      		</div>
    	  </div>
    	  <div class="row">
      	    <div class="col-md-12 text-justify">
        	  <h4><%= blogpost.text.html_safe %></h4>
      	  	</div>
    	  </div>
        </div>
      </div>
    </div>
    
    <% if !current_user.nil? && current_user.admin? %>
      <div class="row admin-box">
        <div class="col-md-offset-8 col-md-4">
    	  <%= link_to "Edit", edit_blogpost_path(blogpost.id), :class => "btn btn-default" %>
		  <%= link_to "Delete", blogpost_path(blogpost), method: :delete, :class => "btn btn-default"%>
		  <%= link_to 'New post', new_blogpost_path, class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

